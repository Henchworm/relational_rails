</ul>



<h1>All Mountain Ranges</h1>
<% if params[:sort] %>
  <% @mtn_ranges.each do |mtn_range| %>
    <h3><%=mtn_range.name%>
      <span style = "font-size:16px; font-weight:normal;">  (Created at: <%=mtn_range.created_at%>)</span>
      <%=link_to "Edit #{mtn_range.name}", "/mtn_ranges/#{mtn_range.id}/edit" %>
      <%= link_to "Delete #{mtn_range.name}", "/mtn_ranges/#{mtn_range.id}", method: :delete %>
      Mountain Count: <%= mtn_range.mountain_count %>
    </h3>
    <% end %>
<% else %>
  <% @mtn_ranges.most_recent_first.each do |mtn_range| %>
    <h3><%=mtn_range.name%>
      <span style = "font-size:16px; font-weight:normal;">  (Created at: <%=mtn_range.created_at%>)</span>
      <%=link_to "Edit #{mtn_range.name}", "/mtn_ranges/#{mtn_range.id}/edit" %>
      <%= link_to "Delete #{mtn_range.name}", "/mtn_ranges/#{mtn_range.id}", method: :delete %>
    </h3>
  <% end %>
<% end %>



<%= link_to "New Mountain Range", "/mtn_ranges/new"  %>
<p><%= link_to "Sort Mountain Ranges by the number of mountains", "/mtn_ranges?sort=true", method: :get%></p>
